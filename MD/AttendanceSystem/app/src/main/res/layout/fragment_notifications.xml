<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.NotificationsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:paddingBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/imgUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="@drawable/ic_circle_border"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="9dp"
                android:adjustViewBounds="true"
                android:background="@drawable/ic_circle"
                android:padding="3dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_person_fill" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-light"
            android:text="@string/username"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgUser" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tabLayout"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Name"
        android:textSize="20sp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/tvNamePreview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/tabLayout"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="%1s"
        android:textSize="20sp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/email"
        android:textSize="20sp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/tvEmailPreview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvNamePreview"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="%1s"
        android:textSize="20sp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/tvPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvEmail"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/password"
        android:textSize="20sp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/tvChangePassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvEmail"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/change_password"
        android:textColor="@color/blue"
        android:textSize="20sp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/tvNIM"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvPassword"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/nim"
        android:textSize="20sp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/tvNIMPreview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvChangePassword"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="%1s"
        android:textSize="20sp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/tvSemester"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvNIM"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/semester"
        android:textSize="20sp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/tvSemesterPreview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvNIMPreview"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="%1s"
        android:textSize="20sp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/tvFaculty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvSemester"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/Faculty"
        android:textSize="20sp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/tvFacultyPreview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvSemesterPreview"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="%1s"
        android:textSize="20sp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/tvMajor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvFaculty"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/Major"
        android:textSize="20sp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/tvMajorPreview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvFacultyPreview"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="%1s"
        android:textSize="20sp"
        android:layout_marginStart="20dp"/>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/logout"
        app:layout_constraintTop_toBottomOf="@id/tvMajor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>